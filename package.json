{
  "name": "kidsprotect",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "desktop"
  ],
  "scripts": {
    "dev:frontend": "cd frontend && bun dev",
    "dev:backend": "cd backend && bun run dev",
    "dev:desktop": "cd desktop && bun run electron-dev",
    "dev": "bunx concurrently \"bun dev:backend\" \"bun dev:frontend\" \"bun dev:desktop\""
  },
  "devDependencies": {
    "@types/bun": "latest",
    "concurrently": "^9.2.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
